rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner or admin
    function isOwnerOrAdmin() {
      // SECURITY FIX: Removed `|| isAuthenticated()` which incorrectly granted admin
      // privileges to every authenticated user.
      return isAuthenticated() &&
        (
          // Check if user document exists and has owner/admin role
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin']
        );
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user owns the property
    function isPropertyOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }

    // Users collection - authenticated users only
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);

      // Subcollection for user data (profile, company, preferences)
      match /data/{document} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
    }

    // User Profiles - authenticated users only (legacy, kept for backwards compatibility)
    match /user_profiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Properties - owners can CRUD, anyone can read (for widget)
    match /properties/{propertyId} {
      allow read: if true; // Public read for widget
      allow create, update, delete: if isOwnerOrAdmin();

      // Units subcollection - same permissions as properties
      match /units/{unitId} {
        allow read: if true; // Public read for widget
        allow create, update, delete: if isOwnerOrAdmin();
      }
    }

    // OLD: Top-level units collection (deprecated - units are now in properties subcollection)
    // Keeping for backwards compatibility if there are any old documents
    match /units/{unitId} {
      allow read: if true; // Public read for widget
      allow create, update, delete: if isOwnerOrAdmin();
    }

    // Bookings - guests can create, owners can manage
    match /bookings/{bookingId} {
      // Allow anyone to create a booking (for the widget), but validate the input.
      // This ensures that essential data is present and has the correct format.
      // A new booking's status must be 'pending'. The owner cannot be set from the client.
      allow create: if request.resource.data.property_id is string &&
                       request.resource.data.unit_id is string &&
                       request.resource.data.guest_name is string &&
                       request.resource.data.guest_email is string &&
                       request.resource.data.guest_email.matches("^[^@]+@[^@]+\\.[^@]+$") &&
                       request.resource.data.check_in is timestamp &&
                       request.resource.data.check_out is timestamp &&
                       request.resource.data.total_price is number &&
                       request.resource.data.status == "pending" &&
                       !("owner_id" in request.resource.data.keys());

      // Allow property owner to read, update, and delete their bookings.
      // The `get()` call fetches the property document to check the `owner_id`.
      allow read, update, delete: if isAuthenticated() &&
                                     get(/databases/$(database)/documents/properties/$(resource.data.property_id)).data.owner_id == request.auth.uid;

      // Note: Guests cannot read their booking details directly via Firestore rules after creation
      // without a more complex token-based system. Booking confirmation should be handled
      // via email or a secure link generated by a Cloud Function.
    }

    // Daily prices - owners manage, anyone can read
    match /daily_prices/{priceId} {
      allow read: if true; // Widget needs to read prices
      allow write: if isOwnerOrAdmin();
    }

    // Additional services - owners manage, anyone can read
    match /additional_services/{serviceId} {
      allow read: if true; // Widget needs to read services
      allow write: if isOwnerOrAdmin();
    }

    // Email templates - owners manage, backend functions read
    match /email_templates/{templateId} {
      // SECURITY FIX: Email templates should not be public.
      // They are read by backend functions. Owners can manage them.
      allow read, write: if isOwnerOrAdmin();
    }

    // iCal feeds - owners manage, backend functions read
    match /ical_feeds/{feedId} {
      // SECURITY FIX: iCal feed data can be sensitive.
      // Only owners should manage them. Backend functions read them.
      allow read, write: if isOwnerOrAdmin();
    }

    // iCal events - owners manage, anyone can read
    match /ical_events/{eventId} {
      allow read: if true; // Widget needs to read events for availability
      allow write: if isOwnerOrAdmin();
    }

    // Tenants - owners manage, access is restricted
    match /tenants/{tenantId} {
      // SECURITY FIX: Tenant/guest information is private and must not be public.
      // Only the owner should have access to this data.
      allow read, write: if isOwnerOrAdmin();
    }

    // Booking Services - junction table for booking â†” additional_services
    match /booking_services/{bookingServiceId} {
      allow read: if true; // Widget needs to read for price calculation
      allow create: if true; // Widget can add services to booking
      allow update, delete: if isOwnerOrAdmin();
    }

    // Notifications - owner notifications for new bookings
    match /notifications/{notificationId} {
      // Allow reading notifications where ownerId matches current user
      // resource == null handles queries, resource.data checks individual docs
      allow read: if isAuthenticated() &&
        (resource == null || resource.data.ownerId == request.auth.uid);
      // Only Cloud Functions can create notifications
      allow create: if false;
      // Owners can update their own notifications (mark as read)
      // Only allow updating isRead field
      allow update: if isAuthenticated() &&
        resource.data.ownerId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
      // Owners can delete their own notifications
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Login attempts - rate limiting for security
    match /loginAttempts/{email} {
      allow read, write: if true; // Anyone can read/write (for rate limiting)
    }

    // Security events - security audit log
    match /securityEvents/{eventId} {
      allow read: if isOwnerOrAdmin();
      // SECURITY FIX: Writing security events should be controlled, typically
      // from backend functions, not open to everyone.
      allow write: if false;
    }
  }
}