rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to verify the user owns the parent property
    // SECURITY: This is the primary defense against IDOR attacks on file uploads
    function isPropertyOwner(propertyId) {
      return isAuthenticated() &&
        get(/databases/(default)/documents/properties/$(propertyId)).data.owner_id == request.auth.uid;
    }

    // User-specific files (profile images, unit images, etc.)
    // Path: users/{userId}/...
    match /users/{userId}/{allPaths=**} {
      // Users can read/write their own files
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Property images (public read for widget display)
    // Path: properties/{propertyId}/...
    match /properties/{propertyId}/{allPaths=**} {
      // Anyone can read (for public widget display)
      allow read: if true;
      // SECURITY FIX: Only the legitimate property owner can upload/overwrite images.
      // Prevents an authenticated user from overwriting another user's property photos.
      allow write: if isPropertyOwner(propertyId);
    }

    // iCal exports (public read for calendar subscriptions, authenticated write)
    // Path: ical-exports/{propertyId}/{unitId}/...
    match /ical-exports/{propertyId}/{unitId}/{allPaths=**} {
      // Anyone can read (for public calendar subscriptions)
      allow read: if true;
      // SECURITY FIX: Only the legitimate property owner can generate iCal exports.
      allow write: if isPropertyOwner(propertyId);
    }

    // Public assets (logos, default images, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admin via Firebase console
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
